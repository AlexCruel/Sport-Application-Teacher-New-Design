        <Button Content="Физич. подготовка" Height="40" Margin="788,0,53,130" VerticalAlignment="Bottom" Background="#FF544DA5" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Fitness"/>
        <Button Content="Выход" Height="40" Margin="788,0,53,16" VerticalAlignment="Bottom" Background="#FF544DA5" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Exit"/>
    </Grid>
</Window>
