        mc:Ignorable="d"
        Title="ReportSumHoursWindow" Height="600" Width="1080" WindowStyle="None" ResizeMode="NoResize">
    <Grid Background="#FFE5E5E5">
        <TextBlock x:Name="groupBlock" HorizontalAlignment="Left" Margin="839,11,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="56" Width="154" FontSize="36" FontWeight="Bold" Foreground="#FF544DA5"/>
        <DataGrid x:Name="studHoursGrid" FontSize="22" HorizontalAlignment="Left" Width="735"/>
        <Button Content="Лист часов" Height="40" Margin="788,110,53,442" Background="#FF544DA5" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Sheet"/>
        <Button Content="Волонтёрская работа" Height="40" Margin="788,0,53,370" VerticalAlignment="Bottom" Background="#FF544DA5" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Volunteer"/>
        <Button Content="Спортивные секции" Height="40" Margin="788,0,53,290" VerticalAlignment="Bottom" Background="#FF544DA5" FontSize="18" FontFamily="Segoe UI" FontWeight="Bold" Click="Button_Sections"/>
